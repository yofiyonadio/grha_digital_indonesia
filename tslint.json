{
    "extends": "tslint:recommended",
    "rules": {
        "comment-format": false,
        "no-var-keyword": true,
        "prefer-const": true,
        "no-shadowed-variable": true,
        "no-unused-variable": true,
        "no-unused-expression": [
            false,
            "allow-fast-null-checks",
            "allow-new",
            "allow-tagged-template"
        ],
        "no-conditional-assignment": true,
        "no-console": true,
        "no-debugger": true,
        "quotemark": [
            false,
            "single",
            "jsx-double"
        ],
        "trailing-comma": [
            false,
            {
                "multiline": "always",
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "member-access": false,
        "variable-name": [
            false,
            "check-format",
            "allow-snake-case"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "whitespace": [
            true,
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "ordered-imports": false,
        "object-literal-sort-keys": [
            false,
            "ignore-case",
            "match-declaration-order"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "align": false,
        "no-magic-numbers": false,
        "max-classes-per-file": false,
        "max-line-length": false,
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-consecutive-blank-lines": false,
        "no-trailing-whitespace": false,
        "no-string-throw": false,
        "no-var-requires": false
    },
    "jsRules": {}
}